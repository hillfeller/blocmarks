
<h1>Edit Bookmark</h1>

<%if current_user %>
  <div class="col-md-8">
      <%= form_for [@bookmark.topic, @bookmark] do |f| %>
        <div class="form-group">
          <%= f.label :url %>
          <%= f.text_field :url, class: 'form-control', placeholder: "Enter bookmark URL" %>
        </div>

        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  <%end%>

</div>
