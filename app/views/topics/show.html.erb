<h1><%= @topic.title %></h1>
<p><%#= @bookmark.url %></p>

<div class="row">
  <div class="col-md-8">

  </div>
  <div class="col-md-4">
    <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-success' %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
    <%#= link_to "New Bookmark", new_bookmark_path(@topic.bookmarks), class: 'btn btn-success' %>

  </div>

  <% @topic.bookmarks.each do |bookmark| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
      </h4>
    </div>
  </div>
  <% end %>

  <%# if current_user %>
    <div class="col-md-4">
     <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
    </div>
  <%#end %>
  
</div>
