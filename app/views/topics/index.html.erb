<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @topics.each do |topic| %>

      <tr>
        <td class="active"><%= topic.title %></td>
        <td class="active"><%= topic.user.name %></td>
        <td class ="success"><%= link_to 'Show', topic %></td>
        <td class="warning"><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td class="danger"><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

